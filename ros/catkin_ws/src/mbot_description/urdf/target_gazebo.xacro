<?xml version="1.0"?>
<robot name="mbot" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:macro name="mbot_base_gazebo">
        <link name="target">
            <visual>
                <origin xyz="4 0 0" rpy="0 0 0" />
                <geometry>
                    <box size="1 1 1" />
                </geometry>
            </visual>
        </link>
        <gazebo reference="target">
            <turnGravityOff>false</turnGravityOff>
        </gazebo>
    </xacro:macro>	

</robot>
